#include <stdio.h>
#include <stdlib.h>
#include <pthread.h>
#include <sched.h>

int n;

cps void
thread_routine(void)
{
    while(1) {
        cpc_yield();
        cpc_spawn thread_routine();
        n++;
        if(n % 10000 == 0) {
            printf("%d\n", n);
        }
    }
    return;
}

int
main()
{
    pthread_t thread;
    int rc;

    setbuf(stdout, NULL);

    n = 0;
    cpc_spawn thread_routine();
    cpc_main_loop();
    return 0;
}







